{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "never",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": true,
		"clear": false
	},
	"problemMatcher" : [{
		"source": "tniasm-preprocessor",
		"pattern" : {
			"regexp": "^(Warning|Error) while (.*)$",
			"severity": 1,
			"message": 2
		}
	}, {
		"source": "tniasm",
		"fileLocation": ["relative", "${workspaceFolder}"],
		"pattern": {
			"regexp": "^(Warning|Error) in line (\\d+) \\(([^)]+)\\): (.*)$",
			"severity": 1,
			"line": 2,
			"file": 3,
			"message": 4,
		}
	}],
	"tasks": [{
		"label": "make clean build",
		"type": "shell",
		"command": "mingw32-make clean compile",
		"group": "build"
	}, {
		"label": "make (default)",
		"type": "shell",
		"command": "mingw32-make",
		"group": {
			"kind": "build",
			"isDefault": true
		}
	}]
}